{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Ingredient</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ingredient.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ ingredient.name }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ ingredient.amount }}</td>
            </tr>
            <tr>
                <th>Amounttype</th>
                <td>{{ ingredient.amountType }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('ingredient') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('ingredient_edit', { 'id': ingredient.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
