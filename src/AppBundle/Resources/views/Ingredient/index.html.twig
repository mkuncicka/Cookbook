{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Ingredient list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Amount</th>
                <th>Amounttype</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ingredient in ingredients %}
            <tr>
                <td><a href="{{ path('ingredient_show', { 'id': ingredient.id }) }}">{{ ingredient.id }}</a></td>
                <td>{{ ingredient.name }}</td>
                <td>{{ ingredient.amount }}</td>
                <td>{{ ingredient.amountType }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('ingredient_show', { 'id': ingredient.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('ingredient_edit', { 'id': ingredient.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('ingredient_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
